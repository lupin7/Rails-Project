<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Price</th>
      <th>Stock quantity</th>
      <!-- <th>Image filename</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="index_pics"><%= image_tag product.image_filename %></td>
        <td><%= link_to product.name.truncate(30), product %></td>
        <td><%= product.description.truncate(50) %></td>
        <td><%= product.category.name %></td>
        <td class="align_right"><%= number_to_currency(product.price) %></td>
        <td class="align_right"><%= product.stock_quantity %></td>
        <!-- <td><%= link_to 'Show', product %></td> -->
        <!-- <td><%= link_to 'Edit', edit_product_path(product) %></td> -->
        <!-- <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

