<main>
  <h1>Admin Dasboard</h1>
  <br />
  <h2>Listing products - <%= link_to 'Back to Storefront', root_path %></h2>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>Price</th>
        <th>Stock quantity</th>
        <!-- <th>Image filename</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td class="index_pics"><%= image_tag product.image_filename %></td>
          <td><%= link_to product.name.truncate(30), product %></td>
          <td><%= product.description.truncate(50) %></td>
          <td><%= product.category.name %></td>
          <td class="center_align"><%= product.stock_quantity %></td>
          <!-- <td><%= link_to 'Show', product %></td> -->
          <!-- <td><%= link_to 'Edit', edit_product_path(product) %></td> -->
          <!-- <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Product', new_product_path %> 
</main>